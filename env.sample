# Server Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/delivery-app
USE_MONGODB_TRANSACTIONS=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=1

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_key_here

# Default Admin User (created on first run if no admin exists)
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@deliveryapp.com
ADMIN_PASSWORD=admin123456
ADMIN_PHONE=1234567890

# Email Configuration
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_username
EMAIL_PASSWORD=your_password
EMAIL_FROM=noreply@deliveryapp.com

# Google Maps API Key (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe API Keys (for payment processing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000      # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100      # Max requests per IP in the window period
AUTH_RATE_LIMIT_WINDOW_MS=3600000 # 1 hour in milliseconds
AUTH_RATE_LIMIT_MAX_REQUESTS=10  # Max login/register attempts per IP
SENSITIVE_OPS_RATE_LIMIT_WINDOW_MS=3600000 # 1 hour in milliseconds
SENSITIVE_OPS_RATE_LIMIT_MAX_REQUESTS=5   # Max sensitive operations per IP

# Compression Configuration
COMPRESSION_LEVEL=6              # Compression level (0-9, where 9 is maximum compression)
COMPRESSION_THRESHOLD=0          # Minimum size in bytes to compress responses (0 = compress all)

# Cache Control Configuration (in seconds)
CACHE_DURATION_SHORT=60          # Short-lived cache (1 minute)
CACHE_DURATION_MEDIUM=300        # Medium-lived cache (5 minutes)
CACHE_DURATION_LONG=3600         # Long-lived cache (1 hour)
CACHE_DURATION_VERY_LONG=86400   # Very long-lived cache (1 day)
CACHE_DURATION_STATIC=604800     # Static assets cache (7 days)

# Content Security Policy Configuration
CSP_REPORT_ONLY=false            # Set to true to monitor but not enforce CSP rules
CSP_REPORT_URI=/api/csp-report   # Endpoint to receive CSP violation reports 

# Health Check Configuration
# External API endpoints to check in the comprehensive health check
# Format: JSON array of objects with name, url, timeout (ms), and maxResponseTime (ms) properties
# Example: [{"name":"Google Maps API","url":"https://maps.googleapis.com/maps/api/geocode/json?address=1600+Amphitheatre+Parkway,+Mountain+View,+CA&key=YOUR_API_KEY","timeout":5000,"maxResponseTime":2000}]
EXTERNAL_API_ENDPOINTS=[]

# Critical thresholds for health checks
HEALTH_CHECK_CRITICAL_DISK_PERCENT=95  # Disk usage percentage to consider critical
HEALTH_CHECK_CRITICAL_CPU_PERCENT=90   # CPU usage percentage to consider critical
HEALTH_CHECK_CRITICAL_MEMORY_PERCENT=90 # Memory usage percentage to consider critical 