{
  "name": "delivery-app",
  "version": "1.0.0",
  "description": "A merchant-truck coordination application for international shipments",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/simplified-e2e.test.js --detectOpenHandles --forceExit",
    "test:rate-limit": "node tests/utils/test-rate-limit.js",
    "test:compression": "node tests/utils/test-compression.js",
    "test:caching": "node tests/utils/test-caching.js",
    "test:csrf": "node tests/utils/test-csrf.js",
    "test:csp": "node tests/utils/test-csp.js",
    "test:security": "npm run test:csrf && npm run test:csp",
    "test:indexes": "node tests/utils/test-indexes.js",
    "create-admin": "node src/scripts/createAdminUser.js",
    "logs": "node src/scripts/log-utils.js",
    "logs:list": "node src/scripts/log-utils.js list",
    "logs:clean": "node src/scripts/log-utils.js clean",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "db:create-indexes": "node src/scripts/database/createIndexes.js",
    "db:monitor-indexes": "node src/scripts/database/monitorIndexes.js",
    "db:optimize": "npm run db:create-indexes && npm run db:monitor-indexes"
  },
  "keywords": [
    "shipping",
    "logistics",
    "express",
    "mongodb",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "socket.io": "^4.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.7.2",
    "uuid": "^11.1.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.4"
  }
}
